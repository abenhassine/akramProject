<%- include("../elements/header.ejs"); %>
  


      <!-- Page Header Ends-->
      <!-- Page Body Start-->
      <div class="page-body-wrapper">
          <!-- start sidebar -->
        <%- include("../elements/leftbar.ejs"); %>
        <!-- end sidebar -->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3>Gestion des étages</h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Gestion</li>
                    <li class="breadcrumb-item active">Etages</li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid AllStates">

            <div class="row mytableStage">
                    <form method="post" action="<%=nodeAdminUrl%>/<%=controller%>/edit/<%=data.id%>" enctype="multipart/form-data">
                        <div class="widget-body">  
                            <input type="hidden" value="<%=data.id%>" name="id"> 
                            <div class="widget-main">  

                                <div>
                                    <label for="form-field-select-1">First Name</label> 
                                    <input type="text" name="first_name" value="<%=data.first_name%>" id="form-field-select-1" placeholder="First Name" class="form-control">  
                                    <span class="error"><%=errorData.first_name%></span> 
                                </div>  <br> 

                                <div>
                                    <label for="form-field-select-1">Last Name</label> 
                                    <input type="text" name="last_name" value="<%=data.last_name%>" id="form-field-select-1" placeholder="Last Name" class="form-control">  
                                    <span class="error"><%=errorData.last_name%></span> 
                                </div>  <br>

                                <div>
                                    <label for="form-field-select-1"> Email </label> 
                                    <input type="text" name="email" value="<%=data.email%>" id="form-field-select-1" placeholder="Email" class="form-control">  
                                    <span class="error"><%=errorData.email%></span>  
                                </div>  <br>  

                                <!-- <div>
                                    <label for="form-field-select-1"> Password </label> 
                                    <input type="password" name="title" value="<%=data.password%>" id="form-field-select-1" placeholder="Passowrd" class="form-control">  
                                    <span class="error"><%=errorData.password%></span>   
                                </div>  <br>   -->

                                <div>
                                    <label for="form-field-select-1"> Mobile Number </label> 
                                    <input type="text" name="contact_number" value="<%=data.contact_number%>" id="form-field-select-1" placeholder="Mobile Number" class="form-control">  
                                    <span class="error"><%=errorData.contact_number%></span> 
                                </div>  <br>  

                                <div>
                                    <label for="form-field-select-1"> Profile Image </label> 
                                    <input type="file" name="profile_pic" id="form-field-select-1" class="form-control">  
                                    <span class="error"><%=errorData.profile_pic%></span>  
                                    <% if(data.profile_pic){  %>
                                        <img style="width: 150px;" src="<%=nodeSiteUrl%>/upload/<%=data.profile_pic%>">  
                                    <% } %>
                                </div>  <br> 

                                <div> 
                                    <label for="form-field-select-2">Status</label> 
                                    <select class="form-control" name="is_active" id="form-field-select-2">
                                        <option value="1" <%=data.is_active==1 ? 'selected' : '' %>>Active</option>
                                        <option value="0"  <%=data.is_active==0 ? 'selected' : '' %>>Inactive</option> 
                                    </select>
                                    <span class="error"><%=errorData.is_active%></span>  
                                </div>  <br>
                                <br>     
                                <div> 
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button class="btn btn-info" type="submit"> <i class="ace-icon fa fa-check bigger-110"></i>  Submit </button>  
                                            &nbsp; &nbsp; &nbsp;
                                            <a href="<%=nodeAdminUrl%>/<%=controller%>/list%>"> <button class="btn" type="button"> Cancel </button></a>   
                                        </div>   
                                    </div>   
                                    <div class="space-2"></div>  
                                </div>    
                            </div>
                        </div>
                        </form> 
            </div>
			
          </div>
          <!-- Container-fluid Ends-->
        </div>
        <!-- footer start-->
        <footer class="footer">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-6 p-0 footer-left">
                <p class="mb-0">Copyright © 2023 Tivo. All rights reserved.</p>
              </div>
              <div class="col-md-6 p-0 footer-right">
                <p class="mb-0">Hand-crafted & made with <i class="fa fa-heart font-danger"></i></p>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>
    </body>

 
